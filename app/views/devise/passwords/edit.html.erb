<section class="">
  <div class="container my-5">
    <div class="row gx-lg-5 align-items-center justify-content-center">
      <div class="col-lg-6 d-none d-lg-block">
        <h1 class="my-5 display-3 fw-bold ls-tight">
          Change your password
        </h1>
        <p style="color: hsl(217, 10%, 50.8%)">
          Please enter your new password below.
        </p>
      </div>

      <div class="col-lg-6 col-md-8 col-sm-10">
        <div class="card shadow-custom mx-auto">
          <div class="card-body py-5 px-md-5">
            <h2 class="text-center">Change your password</h2>
            <% if resource.errors.any? %>
              <div class="alert alert-danger">
                <h4><%= pluralize(resource.errors.count, "error") %> prohibited this user from being saved:</h4>
                <ul>
                  <% resource.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
              <%= f.hidden_field :reset_password_token %>

              <div class="field mb-4">
                <%= f.label :password, "New password" %><br />
                <% if @minimum_password_length %>
                  <em>(<%= @minimum_password_length %> characters minimum)</em><br />
                <% end %>
                <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: 'form-control' %>
              </div>

              <div class="field mb-4">
                <%= f.label :password_confirmation, "Confirm new password" %><br />
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
              </div>

              <div class="actions text-center">
                <%= f.submit "Change my password", class: 'btn btn-primary btn-block' %>
              </div>
            <% end %>
            
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
